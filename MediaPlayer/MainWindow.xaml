<Window
    x:Class="MediaPlayer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MediaPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="920"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <DockPanel>

        <StackPanel
            Name="Controls"
            Width="1000"
            Height="100"
            DockPanel.Dock="Bottom">

            <StackPanel>
                <StackPanel
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock Name="TimeElapsed" Text="0:00:03" />
                    <Slider
                        Name="Slider"
                        Width="800"
                        Margin="30,0" />
                    <TextBlock Name="TimeRemaining" Text="1:00:00" />
                </StackPanel>
            </StackPanel>

            <StackPanel
                Name="ControlButtons"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <Button
                    Name="PlayButton"
                    Click="PlayButton_Click"
                    Style="{StaticResource ControlButton}">
                    <Image Name="PlayButtonImage" Source="images/play.png" />
                </Button>

                <Button
                    Name="ResetButton"
                    Click="ResetButton_Click"
                    Style="{StaticResource ControlButton}">
                    <Image Source="images/reset.png" />
                </Button>
            </StackPanel>
        </StackPanel>

        <Border BorderBrush="Black" BorderThickness="0,0,1,1">
            <StackPanel
                Name="Playlist"
                Width="300"
                Height="800"
                DockPanel.Dock="Left">
                <Button
                    Name="BrowseButton"
                    Width="150"
                    Height="50"
                    Margin="0,20,0,0"
                    Click="BrowseButton_Click"
                    Content="Browse"
                    FontSize="20" />

                <StackPanel Margin="0,10,0,0">
                    <ListView
                        Name="FilesListView"
                        Height="520"
                        SelectionChanged="FilesListView_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border BorderBrush="Black" BorderThickness="0,0,0,1">
            <StackPanel
                Width="700"
                Height="800"
                DockPanel.Dock="Right">
                <MediaElement x:Name="Player" LoadedBehavior="Manual" />
            </StackPanel>
        </Border>
    </DockPanel>
</Window>