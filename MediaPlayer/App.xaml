<Application
    x:Class="MediaPlayer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MediaPlayer"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ControlButton">
            <Setter Property="Button.Width" Value="50" />
            <Setter Property="Button.Height" Value="50" />
            <Setter Property="Button.Margin" Value="20,0,10,0" />
        </Style>

        <Style x:Key="RectangularButton">
            <Setter Property="Button.Width" Value="140" />
            <Setter Property="Button.Height" Value="30" />
            <Setter Property="Button.Margin" Value="3" />
            <Setter Property="Button.FontSize" Value="12" />
            <Setter Property="Button.HorizontalAlignment" Value="Center" />
        </Style>
    </Application.Resources>
</Application>